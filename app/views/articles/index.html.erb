<h1>Articles List</h1>

<table border="1" style="border-collapse: collapse; padding: 15px;">
<tr>
	<th>Title</th>
	<th>Description</th>
	<th>Edit - Show</th>		
</tr>
<% @articles.each do |a| %>

<tr>
	<td><%= a.title %></td>
	<td><%= a.description %></td>
	<td><%= link_to "Edit", edit_article_path(a) %> - 
		<%= link_to "Show", article_path(a)%> -
		<%= link_to "Delete", article_path(a), method: :delete %>
	</td>		
</tr>

<% end %>
</table>
